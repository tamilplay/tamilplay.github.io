[aviable=lastcomments]<div class="last-comm-link">{news_title}</div>[/aviable]

<div class=" my-2 ext-black dark:text-gray-200 antialiased flex max-w-lg">
  <img class="rounded-full h-8 w-8 mr-2 mt-1 " src="{foto}">
  <div>
    <div class="bg-gray-100 dark:bg-gray-700 rounded-lg px-4 pt-2 pb-2.5">
      <div class="font-semibold text-sm leading-relaxed"><span class="comm-author js-author">@{author} </span>
			[commentsgroup=1]<span>{group-name} </span>[/commentsgroup]
			<span>{date}</span></div>
      <div class="text-normal leading-snug md:leading-normal">
         {comment}
        </div>
              <div class="flex items-center text-sm text-gray-500 mt-1 space-x-3"><span>{date} </span>[reply]<span class="reply"> Reply</span>[/reply][rating-plus]<span class="fal fa-thumbs-up"></span>[/rating-plus] {rating}</div>

    </div>
   
      
      
    
  </div>
</div>



